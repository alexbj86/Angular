{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "plugins": [
  			{ "name": "tslint-language-service"}, 
  			{ "name": "@angular/language-service"}
  	],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
